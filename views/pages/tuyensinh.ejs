<ul id="commentList">
    <!-- Danh sách các bình luận sẽ được hiển thị ở đây -->
</ul>

<script>
    // Mảng để lưu trữ các bình luận
    let comments = [];

    // Hàm để thêm bình luận mới
    function addComment() {
        const commentText = document.getElementById('commentText');
        if (commentText.value.trim() === '') {
            // Thêm lớp 'error' để thay đổi màu viền thành màu đỏ
            commentText.classList.add('error');
            alert('Vui lòng nhập nội dung bình luận.');
            return;
        }
        
        // Xóa lớp 'error' nếu người dùng đã nhập nội dung
        commentText.classList.remove('error');

        const comment = {
            text: commentText.value,
            timestamp: new Date().toLocaleString()  // Thêm thời gian vào bình luận
        };

        comments.push(comment);
        displayComments();
        commentText.value = '';  // Xóa nội dung ô nhập
    }

    // Hàm để hiển thị danh sách các bình luận
    function displayComments() {
        const commentList = document.getElementById('commentList');
        commentList.innerHTML = '';  // Xóa nội dung hiện tại của danh sách bình luận

        comments.forEach(comment => {
            const li = document.createElement('li');
            li.textContent = `${comment.text} - ${comment.timestamp}`;
            commentList.appendChild(li);
        });
    }
</script>
